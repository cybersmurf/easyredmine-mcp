# Easy Redmine MCP server environment
# Copy to .env and fill real values. Do NOT commit .env

# Base URL of your Easy Redmine instance (must end with /)
REDMINE_BASE_URL=https://your-redmine.example.com/

# API key for X-Redmine-API-Key header (or leave empty if using session)
REDMINE_API_KEY=

# Set to true to allow self-signed certificates (development only)
REDMINE_INSECURE_SSL=false

# HTTP facade (MCP over HTTP-like API)
# Enable to expose HTTP endpoints /mcp/tools, /mcp/call/{tool}, /mcp/openapi.json
MCP_HTTP_ENABLED=false
MCP_HTTP_PORT=8080
MCP_HTTP_PATH=/mcp
# Optional API key protection: send X-MCP-API-Key header or ?api_key=...
MCP_HTTP_API_KEY=
# CORS allowed origins (comma separated, * allowed)
MCP_CORS_ORIGINS=*
# Public base used in the OpenAPI servers url (optional)
MCP_PUBLIC_BASE=
